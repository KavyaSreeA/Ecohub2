# ==================== ECOHUB ENVIRONMENT VARIABLES ====================
# Copy this file to .env and fill in your real values
# NEVER commit .env to Git!
#
# For Vite (frontend): Variables must start with VITE_
# For Node.js (backend): Any variable name works

# ==================== FIREBASE ====================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ==================== GOOGLE MAPS ====================
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==================== OPENWEATHERMAP ====================
VITE_OPENWEATHER_API_KEY=your_openweather_api_key

# ==================== STREAM CHAT ====================
VITE_STREAM_CHAT_API_KEY=your_stream_chat_key
STREAM_CHAT_API_SECRET=your_stream_chat_secret

# ==================== RECAPTCHA ====================
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ==================== AUTH0 (Optional) ====================
VITE_AUTH0_DOMAIN=your_auth0_domain
VITE_AUTH0_CLIENT_ID=your_auth0_client_id

# ==================== SERVER ====================
JWT_SECRET=your_jwt_secret_key
PORT=4000

# ==================== OPTIONAL APIs ====================

# NREL (Get free key at https://developer.nrel.gov/signup/)
VITE_NREL_API_KEY=DEMO_KEY

# Stripe (https://stripe.com)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx

# Razorpay (https://razorpay.com)
VITE_RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_KEY_SECRET=xxx

# SendGrid (https://sendgrid.com)
SENDGRID_API_KEY=SG.xxx

# OpenAI (https://openai.com)
OPENAI_API_KEY=sk-xxx

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-xxx

# MongoDB
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/ecohub

# AWS S3
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx

# Cloudinary
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=xxx
CLOUDINARY_API_SECRET=xxx
